{
  "name": "BoxRFID",
  "version": "1.0.0",
  "description": "BoxRFID – Filament Tag Manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder --win --linux --mac",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.tinkerbarn.BoxRFID",
    "productName": "BoxRFID – Filament Tag Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "nfc-service.js",
      "assets/**/*",
      "screenshots/**/*",
      "tools/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/@pokusew/pcsclite/**/*",
      "node_modules/nfc-pcsc/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/AppIcon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "allowElevation": false
    }
  },
  "keywords": [
    "RFID",
    "QIDI",
    "3D Printing",
    "Tag Writer",
    "Filament",
    "NFC",
    "QIDI Box",
    "Plus4",
    "Plus 4",
    "X-Plus4",
    "X-Plus 4",
    "Q2"
  ],
  "author": "Tinkerbarn",
  "license": "CC-BY-NC-SA-4.0",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^37.3.1",
    "electron-builder": "latest",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.3"
  },
  "dependencies": {
    "nfc-pcsc": "^0.8.1"
  }
}
